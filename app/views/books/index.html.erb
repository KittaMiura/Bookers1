<body>
  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    
    <% @books.each do |book| %>
    <tbody>
      
      <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><a href="/books/show">Show</a></td>
      <td><a href="/books/edit">Edit</a></td>
      <td><a href="/books/destroy">Destroy</a></td>
      </tr>
      
    </tbody>
    <% end %>
  </table>

  <h2>New Book</h2>
  <%= form_with model: @book do |f| %>
  
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

  <% end %>
  
</body>